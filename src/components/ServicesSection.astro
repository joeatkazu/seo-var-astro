---
import { Search, Brain, BarChart3, Globe, Zap, Target, ArrowRight } from "lucide-react";

const accentColors = [
  { bg: "bg-blue-50", text: "text-blue-600", hover: "hover:text-blue-700" },
  { bg: "bg-indigo-50", text: "text-indigo-600", hover: "hover:text-indigo-700" },
  { bg: "bg-teal-50", text: "text-teal-600", hover: "hover:text-teal-700" },
  { bg: "bg-purple-50", text: "text-purple-600", hover: "hover:text-purple-700" },
  { bg: "bg-orange-50", text: "text-orange-600", hover: "hover:text-orange-700" },
  { bg: "bg-pink-50", text: "text-pink-600", hover: "hover:text-pink-700" },
];

const services = [
  {
    icon: Search,
    slug: "seo-strategia",
    title: "SEO stratégia és kivitelezés",
    description: "Technikai SEO, tartalomstratégia és prémium linképítés – nálunk ez egyetlen, összehangolt gépezet. Nem ad-hoc feladatokban, hanem üzleti célokra tervezett rendszerben gondolkodunk, amely hosszú távú és mérhető növekedést hoz cégének.",
  },
  {
    icon: Brain,
    slug: "ai-kereses",
    title: "AI keresőoptimalizálás",
    description: "AI-optimalizálás ChatGPT, Gemini és más platformokra. Gondoskodunk róla, hogy az Ön cége legyen a válasz, amikor a leendő ügyfelei kérdeznek.",
  },
  {
    icon: BarChart3,
    slug: "analitika",
    title: "Adatalapú döntéstámogatás és érthető üzleti jelentések.",
    description: "Több mint statisztika: valódi üzleti hatás. Strukturált méréseinkkel nemcsak a látogatókat látja, hanem a konkrét bevételt és a cége növekedését is.",
  },
  {
    icon: Globe,
    slug: "helyi-seo",
    title: "Helyi SEO és Google Térkép optimalizálás.",
    description: "Legyen az első a térképen! Google Térkép és helyi keresőoptimalizálás budapesti és hazai vállalkozásoknak. Több telefonhívás, több ajánlatkérés és megkerülhetetlen piaci előny a környéken.",
  },
  {
    icon: Zap,
    slug: "weboldal-teljesitmeny",
    title: "Weboldal-teljesítmény és Core Web Vitals optimalizálás.",
    description: "Szeressék a látogatók, imádja a Google! Egy villámgyors és stabil weboldal a legjobb alap a sikerhez. Ha nem kell várni a betöltésre, a felhasználói élmény szárnyal, a Google pedig előkelő helyezéssel jutalmazza a gyorsaságot – Önnek pedig ez több elégedett vásárlót és profitot jelent.",
  },
  {
    icon: Target,
    slug: "versenytars-elemzes",
    title: "Versenytárs-elemzés és piaci lehetőségek.",
    description: "Ismerje ki a versenytársak stratégiáját, és találjuk meg az Ön számára legelőnyösebb pozicionálást! Feltérképezzük, hol nyernek jelenleg a többiek, és hol tudunk olyan üzleti struktúrát építeni, amivel Ön kerül lépéselőnybe. Ne hagyatkozzon csak a megérzéseire: alapozza a döntéseit valódi adatokra!",
  },
];
---

<section id="szolgaltatasok" class="py-20">
  <div class="container mx-auto px-4">
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <span class="text-sm font-semibold uppercase tracking-wider text-[hsl(var(--primary))]">Szolgáltatásaink</span>
      <h2 class="mt-3 text-3xl font-bold text-slate-900 sm:text-4xl">
        Átfogó digitális megoldások
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        Maximális jelenlét a keresőkben – átfogó stratégia az Ön cégére szabva.
      </p>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {services.map((service, index) => {
        const accent = accentColors[index];
        return (
          <div
            class="group rounded-2xl border border-slate-100 bg-white p-8 shadow-sm transition-all duration-300 hover:shadow-xl"
          >
            <div class={`mb-6 flex h-14 w-14 items-center justify-center rounded-xl ${accent.bg} ${accent.text} transition-transform duration-300 group-hover:scale-110`}>
              <service.icon size={28} />
            </div>
            <h3 class="mb-3 text-xl font-bold text-slate-900">{service.title}</h3>
            <p class="mb-6 text-sm leading-relaxed text-slate-600">
              {service.description}
            </p>
            <a href={`/szolgaltatasok/${service.slug}`} class={`inline-flex items-center text-sm font-semibold ${accent.text} ${accent.hover}`}>
              Tovább
              <ArrowRight size={16} class="ml-1 transition-transform group-hover:translate-x-1" />
            </a>
          </div>
        );
      })}
    </div>
  </div>
</section>
