---
import { Search, Brain, BarChart3, Globe, Zap, Target } from "lucide-react";

const services = [
  {
    icon: Search,
    title: "SEO stratégia és kivitelezés",
    description: "Technikai SEO, tartalomstratégia és minőségi linképítés egy átfogó rendszerben. Nem elszigetelt feladatok, hanem üzleti célokra épített keresési infrastruktúra, amely fenntartható organikus növekedést eredményez.",
  },
  {
    icon: Brain,
    title: "AI keresőoptimalizálás",
    description: "Optimalizálás ChatGPT, Gemini és más AI-platformok számára. Segítünk abban, hogy vállalkozása megjelenjen az AI-válaszokban, amikor potenciális ügyfelei kérdeznek.",
  },
  {
    icon: BarChart3,
    title: "Analitika és üzleti riportálás",
    description: "Strukturált mérés és adatvezérelt riportok. Nem pusztán forgalmi adatok, hanem konverziók, bevétel és valós üzleti hatás.",
  },
  {
    icon: Globe,
    title: "Helyi SEO",
    description: "Google Térkép és helyi keresési jelenlét optimalizálása budapesti és magyar KKV-k számára. Több telefonhívás, több ajánlatkérés, erősebb helyi pozíció.",
  },
  {
    icon: Zap,
    title: "Weboldal teljesítmény és Core Web Vitals",
    description: "Oldalbetöltési sebesség, technikai stabilitás és felhasználói élmény optimalizálása a jobb rangsorolás és magasabb konverzió érdekében.",
  },
  {
    icon: Target,
    title: "Versenytárs- és piacfelmérés",
    description: "Részletes versenytárselemzés és stratégiai pozicionálás. Feltérképezzük, hol nyernek a versenytársak, és hol lehet strukturális előnyt építeni.",
  },
];
---

<section id="szolgaltatasok" class="py-24">
  <div class="container mx-auto px-4">
    <div class="mx-auto mb-16 max-w-2xl text-center">
      <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">
        <span class="gradient-text">Szolgaltatasaink</span>
      </h2>
      <p class="text-lg text-[hsl(var(--muted-foreground))]">
        Atfogo megoldasok a keresokban valo lathatosag maximalizalasara
      </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {services.map((service, index) => (
        <div
          class="group relative rounded-xl border border-[hsl(var(--border))]/50 bg-[hsl(var(--card))] p-8 transition-all duration-300 hover:border-[hsl(var(--primary))]/30 hover:box-glow"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-[hsl(var(--primary))]/10 text-[hsl(var(--primary))] transition-colors group-hover:bg-[hsl(var(--primary))]/20">
            <service.icon size={24} />
          </div>
          <h3 class="mb-2 text-lg font-semibold">{service.title}</h3>
          <p class="text-sm leading-relaxed text-[hsl(var(--muted-foreground))]">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
