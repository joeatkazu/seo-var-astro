---
import { Search, Brain, BarChart3, Globe, Zap, Target, ArrowRight } from "lucide-react";

const accentColors = [
  { bg: "bg-blue-50", text: "text-blue-600", hover: "hover:text-blue-700" },
  { bg: "bg-indigo-50", text: "text-indigo-600", hover: "hover:text-indigo-700" },
  { bg: "bg-teal-50", text: "text-teal-600", hover: "hover:text-teal-700" },
  { bg: "bg-purple-50", text: "text-purple-600", hover: "hover:text-purple-700" },
  { bg: "bg-orange-50", text: "text-orange-600", hover: "hover:text-orange-700" },
  { bg: "bg-pink-50", text: "text-pink-600", hover: "hover:text-pink-700" },
];

const services = [
  {
    icon: Search,
    title: "SEO stratégia és kivitelezés",
    description: "Technikai SEO, tartalomstratégia és minőségi linképítés egy átfogó rendszerben. Nem elszigetelt feladatok, hanem üzleti célokra épített keresési infrastruktúra, amely fenntartható organikus növekedést eredményez.",
  },
  {
    icon: Brain,
    title: "AI keresőoptimalizálás",
    description: "Optimalizálás ChatGPT, Gemini és más AI-platformok számára. Segítünk abban, hogy vállalkozása megjelenjen az AI-válaszokban, amikor potenciális ügyfelei kérdeznek.",
  },
  {
    icon: BarChart3,
    title: "Analitika és üzleti riportálás",
    description: "Strukturált mérés és adatvezérelt riportok. Nem pusztán forgalmi adatok, hanem konverziók, bevétel és valós üzleti hatás.",
  },
  {
    icon: Globe,
    title: "Helyi SEO",
    description: "Google Térkép és helyi keresési jelenlét optimalizálása budapesti és magyar KKV-k számára. Több telefonhívás, több ajánlatkérés, erősebb helyi pozíció.",
  },
  {
    icon: Zap,
    title: "Weboldal teljesítmény és Core Web Vitals",
    description: "Oldalbetöltési sebesség, technikai stabilitás és felhasználói élmény optimalizálása a jobb rangsorolás és magasabb konverzió érdekében.",
  },
  {
    icon: Target,
    title: "Versenytárs- és piacfelmérés",
    description: "Részletes versenytárselemzés és stratégiai pozicionálás. Feltérképezzük, hol nyernek a versenytársak, és hol lehet strukturális előnyt építeni.",
  },
];
---

<section id="szolgaltatasok" class="py-20">
  <div class="container mx-auto px-4">
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <span class="text-sm font-semibold uppercase tracking-wider text-[hsl(var(--primary))]">Szolgáltatásaink</span>
      <h2 class="mt-3 text-3xl font-bold text-slate-900 sm:text-4xl">
        Átfogó digitális megoldások
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        Atfogo megoldasok a keresokban valo lathatosag maximalizalasara
      </p>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {services.map((service, index) => {
        const accent = accentColors[index];
        return (
          <div
            class="group rounded-2xl border border-slate-100 bg-white p-8 shadow-sm transition-all duration-300 hover:shadow-xl"
          >
            <div class={`mb-6 flex h-14 w-14 items-center justify-center rounded-xl ${accent.bg} ${accent.text} transition-transform duration-300 group-hover:scale-110`}>
              <service.icon size={28} />
            </div>
            <h3 class="mb-3 text-xl font-bold text-slate-900">{service.title}</h3>
            <p class="mb-6 text-sm leading-relaxed text-slate-600">
              {service.description}
            </p>
            <a href="/#kapcsolat" class={`inline-flex items-center text-sm font-semibold ${accent.text} ${accent.hover}`}>
              Tovább
              <ArrowRight size={16} class="ml-1 transition-transform group-hover:translate-x-1" />
            </a>
          </div>
        );
      })}
    </div>
  </div>
</section>
