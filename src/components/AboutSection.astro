---
import { Linkedin } from "lucide-react";

const team = [
  {
    name: "Joe Robinson",
    role: "SEO Stratégia és működés",
    bio: "12+ év tapasztalat B2B SaaS és digitális növekedési projektek területén. Nemzetközi vállalatoknál és ügynökségeknél vezetett SEO-stratégiát és technikai auditokat.",
    initials: "JR",
    photo: "/JR.png",
    linkedin: "https://www.linkedin.com/in/robinson-j/",
  },
  {
    name: "Lantos Brigitta",
    role: "AI & Tartalom Vezető",
    bio: "AI-alapú keresőoptimalizálás és tartalomstratégia szakértő. Segít abban, hogy ügyfeleinket a ChatGPT és Gemini válaszaiban is megtalálják.",
    initials: "BL",
    photo: "/BL.jpeg",
    linkedin: "https://www.linkedin.com/in/brigitta-lantos-988973b7/",
  },
];
---

<section id="rolunk" class="py-24">
  <div class="container mx-auto px-4">
    <div class="mx-auto mb-16 max-w-2xl text-center">
      <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">
        Ismerje meg  <span class="gradient-text">alapítóinkat</span>
      </h2>
      <p class="text-lg text-[hsl(var(--muted-foreground))]">
        Tapasztalt szakemberek, akik a keresőoptimalizálás és az AI-keresés világában segítenek növekedni.
      </p>
    </div>

    <div class="mx-auto grid max-w-4xl gap-8 sm:grid-cols-2">
      {team.map((member) => (
        <div
          class="group relative rounded-xl border border-[hsl(var(--border))]/50 bg-[hsl(var(--card))] p-8 text-center transition-all duration-300 hover:border-[hsl(var(--primary))]/30 hover:box-glow"
        >
          <img
            src={member.photo}
            alt={member.name}
            class="mx-auto mb-5 h-20 w-20 rounded-full border-2 border-[hsl(var(--primary))]/20 object-cover"
          />
          <h3 class="mb-1 text-xl font-semibold">{member.name}</h3>
          <p class="mb-3 text-sm font-medium text-[hsl(var(--primary))]">{member.role}</p>
          <p class="mb-5 text-sm leading-relaxed text-[hsl(var(--muted-foreground))]">
            {member.bio}
          </p>
          <a
            href={member.linkedin}
            class="inline-flex items-center gap-1.5 text-sm text-[hsl(var(--muted-foreground))] transition-colors hover:text-[hsl(var(--primary))]"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Linkedin size={16} />
            LinkedIn
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
