---
interface Props {
  items: { step: string; description: string }[];
  title?: string;
  accentColor?: string;
}

const { items, title = "Hogyan dolgozunk?", accentColor = "blue" } = Astro.props;

const colorMap: Record<string, { bg: string; text: string }> = {
  blue:   { bg: "bg-blue-100",   text: "text-blue-600" },
  indigo: { bg: "bg-indigo-100", text: "text-indigo-600" },
  teal:   { bg: "bg-teal-100",   text: "text-teal-600" },
  purple: { bg: "bg-purple-100", text: "text-purple-600" },
  orange: { bg: "bg-orange-100", text: "text-orange-600" },
  pink:   { bg: "bg-pink-100",   text: "text-pink-600" },
};
const colors = colorMap[accentColor] ?? colorMap.blue;
---

<div class="not-prose my-12">
  <h2 class="mb-6 text-2xl font-bold text-slate-900">{title}</h2>
  <div class="space-y-4">
    {items.map((item, index) => (
      <div class="flex gap-5 rounded-xl border border-slate-100 bg-white p-6 shadow-sm">
        <div class={`flex h-10 w-10 shrink-0 items-center justify-center rounded-full ${colors.bg} ${colors.text} text-sm font-bold`}>
          {index + 1}
        </div>
        <div>
          <h3 class="mb-1 font-semibold text-slate-900">{item.step}</h3>
          <p class="text-sm leading-relaxed text-slate-600">{item.description}</p>
        </div>
      </div>
    ))}
  </div>
</div>
